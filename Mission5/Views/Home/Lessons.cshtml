@{
    ViewData["Title"] = "Lessons";
}
<h1>@ViewData["Title"]</h1>

<h2>Take lessons from a dedicated Marimba player!</h2>

<body class="bg-light">

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">

            <h2 class="card-title mb-4">Tutoring Cost Calculator</h2>

            <!-- Hours -->
            <div class="mb-3">
                <label class="form-label">Hours needed</label>
                <input
                    type="number"
                    id="hours"
                    class="form-control"
                    min="0"
                    step="0.5"
                    placeholder="Enter hours"
                >
            </div>

            <!-- Rate -->
            <div class="mb-3">
                <label class="form-label">Hourly rate ($)</label>
                <input
                    type="text"
                    id="rate"
                    class="form-control"
                    value="20.00"
                    readonly
                >
            </div>

            <!-- Button -->
            <button id="calcBtn" class="btn btn-primary w-100">
                Calculate Total
            </button>

            <!-- Output -->
            <div class="mt-3">
                <label class="form-label">Total cost ($)</label>
                <input
                    type="text"
                    id="total"
                    class="form-control"
                    readonly
                >
            </div>

            <!-- Error -->
            <div id="error" class="text-danger mt-2"></div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/calculator.js"></script>
</body> 
